<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand nav-link" href="/home">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-item nav-link" href="/urls">My TinyLinks</a>
        </li>
        <li class="nav-item active">
          <a class="nav-item nav-link" href="/urls/new">Create New TinyLink</a>
        </li>
      </ul>
      <% if(user_id){ %>
      <span class="navbar-text">
        <%= user_id %>
      </span>
        <form class="form-inline mx-2" action="/logout" method="POST">
          <button class="btn btn-primary border-0 shadow-sm" type="submit">Log out</button>
        </form>
      <% } else{ %>
        <form class="form-inline mx-2" action="/register" method="GET">
          <button type="submit" class="btn btn-primary border-0 shadow-sm">Register</button>
        </form>
      <form class="form-inline mx-2" action="/login" method="GET">
        <button type="submit" class="btn btn-primary border-0 shadow-sm">Log in</button>
      </form>
      <% } %>
    </div>
  </nav>
</header>